<%= form_for(idea, html: { class: 'global-search'}) do |form| %>
<div class="input-group input-group--horizontal">
 <%= form.label(:title, class: "input-group__label")%>
  <%= form.text_field(:title, class: 'input-group__field', placeholder: 'E.g. Ride a camel')%>
</div>
<div class="input-group input-group--horizontal">
 <%= form.label(:done_count, class: "input-group__label")%>
<%= form.text_field(:done_count, class: 'input-group__field',placeholder: 'done_count' )%>
</div>
<div class="input-group input-group--horizontal">
 <%= form.label(:photo_url, class: "input-group__label")%>
<%= form.text_field(:photo_url, class: 'input-group__field',placeholder: 'photo_url' )%>
</div>
<div class="input-group input-group--horizontal">
 <%= form.label(:migration, class: "input-group__label")%>
<%= form.text_field(:migration, class: 'input-group__field',placeholder: 'description' )%>
</div>
<div class="prompt">
 <a class="prompt__cancel" href="#cancel">Cancel</a>
 <%= form.submit( class: 'btn btn--primary prompt__confirm')  %>

</div>
<% end %>
